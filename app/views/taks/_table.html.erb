<table class="table  table-hover"> 

  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Duration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% taks.each do |tak| %>
      <tr>
        <td><%= tak.name %></td>
        <td><%= tak.deadline %></td>
        <td><%= tak.duration %></td>
        <% if notice %> 
  <p id="notice" class="alert alert-success alert-dismissable fade in" data-dismiss="alert" aria-hidden="true">
    <%= notice %>
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  </p>
<% end %>

        <td><%= link_to 'Edit', edit_tak_path(tak) %></td>
        <td><%= link_to 'Destroy', tak, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
