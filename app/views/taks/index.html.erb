<h1>Listing taks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Deadline</th>
      <th>Done</th>
      <th>Duration</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @taks.each do |tak| %>
      <tr>
        <td><%= tak.name %></td>
        <td><%= tak.deadline %></td>
        <td><%= tak.done %></td>
        <td><%= tak.duration %></td>
        <p id="notice"><%= notice %></p>
        <td><%= link_to 'Edit', edit_tak_path(tak) %></td>
        <td><%= link_to 'Destroy', tak, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

